# === Compliance & Prompt ===
COMPLIANCE=cmmc
DEFAULT_PROMPTS_DIR=./backend/coldrag/train/prompts/shared

# === Terraform Plan + State Inputs ===
PLAN_FILE=./output/infra/terraform/binary/cmmc_tfplan.binary
PLAN_JSON=./output/infra/terraform/cmmc_tfplan.json
STATE_JSON=./output/infra/terraform/cmmc.tfstate.json

# === Embedding Model Settings ===
EMBEDDING_MODEL=./models/mpnet-finetuned
CHUNK_SIZE=1000
CHUNK_OVERLAP=100
SEARCH_K=10
SEARCH_TYPE=mmr

# === LLM Settings ===
LLM_MODEL=mistral
LLM_RETURN_SOURCES=true
CHAIN_TYPE=stuff

# === Reference Documents for RAG ===
REFERENCE_DIR=./reference_docs

# === Output Locations ===
OUTPUT_FILE=./output/findings/compliance_violations.json
HTML_OUTPUT=./output/infra/terraform/summary/cmmc_infra_summary.html

# === Pipeline & Toggles ===
RUN_TERRAFORM=true
TRAIN_MODEL=true
GENERATE_HTML=true
SETUP_VENV=true
INSTALL_REQUIREMENTS=true
CHECK_OLLAMA=true
OFFLINE_MODE=false
THEME=dark

# === Scripts & Binaries ===
TRAIN_MODEL_SCRIPT=./backend/scripts/rag/pipeline/train_model.sh
TERRAFORM_SCRIPT=./backend/scripts/rag/pipeline/terraform_pipeline.sh
RAG_INSPECTOR_SCRIPT=./backend/scripts/rag/pipeline/run_rag_inspector.sh
HTML_GEN_SCRIPT=./backend/scripts/rag/pipeline/html_generation.sh
OLLAMA_CHECK_SCRIPT=./backend/scripts/rag/pipeline/ollama_check.sh
SETUP_ENV_SCRIPT=./backend/scripts/rag/setup_env.sh
RAG_INSPECTOR_MODULE=./backend/coldrag/rag_inspector.py
TERRAFORM_HTML_REPORT=./backend/scripts/infra/terraform_json_to_html.py

# === Dependencies ===
VENV_PATH=venv
REQUIREMENTS_FILE=./backend/requirements.txt

# === Training Resources ===
MODEL_NAME=sentence-transformers/all-mpnet-base-v2
MODEL_OUTPUT_DIR=./models/mpnet-finetuned
TRAINING_DATA_PATH=./backend/coldrag/train/training_pairs.py
MODEL_TRAINING=./backend/coldrag/train/train_model.py
RETRAIN_MODEL=true

# === API ===
START_FASTAPI=true
FASTAPI_PORT=8000
FASTAPI_HOST=127.0.0.1

# === AWS Configuration ===
# Set these to your AWS credentials
# AWS_ACCESS_KEY_ID=key
# AWS_SECRET_ACCESS_KEY=secret
AWS_DEFAULT_REGION=us-west-1
# AWS_SESSION_TOKEN=your_session_token_if_using_temporary_credentials

# Terraform Configuration
TF_VAR_environment=production
TF_VAR_project=BOA_Beta_v3
TF_VAR_owner=coldchainsecure
TF_VAR_cost_center=IT

# Build Configuration
# Set to true to apply changes, false to only create plan
APPLY=false

# Additional Terraform Variables (if needed)
# TF_VAR_db_username=admin
# TF_VAR_db_password=your_secure_password
# TF_VAR_instance_type=t3.micro 